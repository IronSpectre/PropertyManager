generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// ==================== AUTH MODELS ====================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String?
  image         String?
  role          UserRole  @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts Account[]
  sessions Session[]

  // Relations to other models
  assignedCleaningJobs CleaningJob[] @relation("AssignedCleaner")
  assignedTasks        Task[]        @relation("AssignedUser")
  createdTasks         Task[]        @relation("TaskCreator")
  taskComments         TaskComment[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum UserRole {
  ADMIN
  USER
  CARETAKER
}

// ==================== PROPERTY MODELS ====================

model Property {
  id               String   @id @default(cuid())
  name             String
  address          String
  city             String
  postalCode       String?
  country          String
  latitude         Float?
  longitude        Float?
  tenancyType      TenancyType @default(OTHER)
  bedrooms         Int?
  rent             Float?
  rentDueDay       Int?
  dailyRate        Float?
  smoobuId         String?  @unique
  internalId       String?
  registrationInfo String?
  ownerName        String?
  ownerContact     String?
  caretakerId      String?
  payoutAccountId  String?
  notes            String?
  status           PropertyStatus @default(ACTIVE)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  // Tenant Information
  tenantName       String?
  tenantEmail      String?
  tenantPhone      String?

  // Bank Accounts
  rentSourceAccountId String?

  // Platform Credentials
  airbnbEmail      String?
  airbnbPassword   String?
  bookingComEmail  String?
  bookingComPassword String?

  // Relations
  payoutAccount    PayoutAccount? @relation("IncomeAccount", fields: [payoutAccountId], references: [id])
  rentSourceAccount PayoutAccount? @relation("RentSourceAccount", fields: [rentSourceAccountId], references: [id])
  bookings      Booking[]
  cleaningJobs  CleaningJob[]
  tasks         Task[]
  transactions  Transaction[]
  documents     Document[]
  images        PropertyImage[]
  inventory     InventoryItem[]
  rates         PropertyRate[]
}

model PayoutAccount {
  id          String   @id @default(cuid())
  name        String
  bankName    String?
  accountNumber String?
  sortCode    String?
  iban        String?
  bic         String?
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  incomeProperties Property[] @relation("IncomeAccount")
  rentSourceProperties Property[] @relation("RentSourceAccount")
}

model PropertyImage {
  id         String   @id @default(cuid())
  propertyId String
  filePath   String
  fileName   String
  caption    String?
  order      Int      @default(0)
  createdAt  DateTime @default(now())

  property Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
}

model PropertyRate {
  id         String   @id @default(cuid())
  propertyId String
  date       DateTime
  rate       Float
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  property Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  @@unique([propertyId, date])
  @@index([propertyId, date])
}

enum PropertyStatus {
  ACTIVE
  INACTIVE
  MAINTENANCE
}

enum TenancyType {
  GUARDIANSHIP
  AST
  COMMERCIAL
  OTHER
}

// ==================== BOOKING MODELS ====================

model Booking {
  id             String        @id @default(cuid())
  propertyId     String
  smoobuId       String?       @unique
  guestName      String
  guestEmail     String?
  guestPhone     String?
  checkIn        DateTime
  checkOut       DateTime
  numGuests      Int           @default(1)
  totalAmount    Float?
  source         BookingSource @default(DIRECT)
  status         BookingStatus @default(CONFIRMED)
  notes          String?
  syncedAt       DateTime?
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  property     Property      @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  cleaningJobs CleaningJob[]
  messages     Message[]
}

model Message {
  id        String   @id @default(cuid())
  bookingId String
  smoobuId  String?  @unique
  content   String
  sender    MessageSender
  sentAt    DateTime
  syncedAt  DateTime?
  createdAt DateTime @default(now())

  booking Booking @relation(fields: [bookingId], references: [id], onDelete: Cascade)
}

enum MessageSender {
  HOST
  GUEST
}

enum BookingSource {
  DIRECT
  SMOOBU
  AIRBNB
  BOOKING_COM
  VRBO
  OTHER
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CHECKED_IN
  CHECKED_OUT
  CANCELLED
}

// ==================== CLEANING MODELS ====================

model CleaningJob {
  id            String            @id @default(cuid())
  propertyId    String
  bookingId     String?
  assignedToId  String?
  scheduledDate DateTime
  completedAt   DateTime?
  status        CleaningJobStatus @default(PENDING)
  notes         String?
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt

  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  booking    Booking? @relation(fields: [bookingId], references: [id], onDelete: SetNull)
  assignedTo User?    @relation("AssignedCleaner", fields: [assignedToId], references: [id], onDelete: SetNull)
}

enum CleaningJobStatus {
  PENDING
  SCHEDULED
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

// ==================== TASKS & MAINTENANCE MODELS ====================

model Task {
  id           String       @id @default(cuid())
  propertyId   String?
  title        String
  description  String?
  type         TaskType     @default(AD_HOC)
  priority     TaskPriority @default(MEDIUM)
  status       TaskStatus   @default(OPEN)
  dueDate      DateTime?
  assignedToId String?
  createdById  String?
  completedAt  DateTime?
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  property     Property?       @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  assignedTo   User?           @relation("AssignedUser", fields: [assignedToId], references: [id], onDelete: SetNull)
  createdBy    User?           @relation("TaskCreator", fields: [createdById], references: [id])
  comments     TaskComment[]
  attachments  TaskAttachment[]
  history      TaskHistory[]
}

model TaskComment {
  id        String   @id @default(cuid())
  taskId    String
  userId    String
  content   String
  createdAt DateTime @default(now())

  task Task @relation(fields: [taskId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model TaskAttachment {
  id        String   @id @default(cuid())
  taskId    String
  filePath  String
  fileName  String
  fileType  String?
  createdAt DateTime @default(now())

  task Task @relation(fields: [taskId], references: [id], onDelete: Cascade)
}

model TaskHistory {
  id        String   @id @default(cuid())
  taskId    String
  field     String
  oldValue  String?
  newValue  String?
  changedAt DateTime @default(now())

  task Task @relation(fields: [taskId], references: [id], onDelete: Cascade)
}

enum TaskType {
  AD_HOC
  MAINTENANCE
  INSPECTION
  REPAIR
  UPGRADE
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum TaskStatus {
  OPEN
  IN_PROGRESS
  BLOCKED
  COMPLETED
  CANCELLED
}

// ==================== FINANCE MODELS ====================

model Transaction {
  id          String          @id @default(cuid())
  propertyId  String?
  type        TransactionType
  category    String
  amount      Float
  currency    String          @default("EUR")
  description String?
  date        DateTime
  accountId   String?
  receiptPath String?
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  property Property? @relation(fields: [propertyId], references: [id], onDelete: SetNull)
}

enum TransactionType {
  INCOME
  EXPENSE
}

// ==================== DOCUMENTS MODELS ====================

model Document {
  id         String       @id @default(cuid())
  propertyId String?
  name       String
  filePath   String
  fileType   String?
  category   DocumentCategory @default(OTHER)
  notes      String?
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt

  property Property? @relation(fields: [propertyId], references: [id], onDelete: SetNull)
}

enum DocumentCategory {
  CONTRACT
  INSURANCE
  LICENSE
  TAX
  INVOICE
  MANUAL
  OTHER
}

// ==================== INVENTORY MODELS ====================

model InventoryItem {
  id            String          @id @default(cuid())
  propertyId    String
  name          String
  description   String?
  category      InventoryCategory @default(OTHER)
  quantity      Int             @default(1)
  condition     ItemCondition   @default(GOOD)
  location      String?
  brand         String?
  model         String?
  serialNumber  String?
  purchaseDate  DateTime?
  purchasePrice Float?
  imagePath     String?
  notes         String?
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  property Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
}

enum InventoryCategory {
  FURNITURE
  APPLIANCE
  ELECTRONICS
  KITCHENWARE
  BEDDING
  BATHROOM
  DECOR
  OUTDOOR
  CLEANING
  SAFETY
  OTHER
}

enum ItemCondition {
  NEW
  EXCELLENT
  GOOD
  FAIR
  POOR
  NEEDS_REPLACEMENT
}
